<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss} %-5level [%logger{26}] - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.liftrulez.model.PoolProvider" level="info" />
  <logger name="com.liftrulez.model.PoolProvider.sqlLog" level="debug" />

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>
